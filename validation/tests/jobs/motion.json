{
  "id": "motion",
  "what": "validation of motion test",
  "strict": true,
  "timeLimit": 20,
  "acts": [
    {
      "type": "launch",
      "which": "webkit",
      "what": "used for tests on which chromium fails on some URLs"
    },
    {
      "type": "url",
      "which": "__targets__/motion/good.html",
      "what": "page without motion"
    },
    {
      "type": "test",
      "which": "testaro",
      "what": "spontaneous change of content",
      "delay": 2400,
      "interval": 2600,
      "count": 5,
      "expect": [
        [
          "result.rules.motion.data.meanLocalRatio",
          "=",
          1
        ],
        [
          "result.rules.motion.data.maxLocalRatio",
          "=",
          1
        ],
        [
          "result.rules.motion.data.globalRatio",
          "=",
          1
        ],
        [
          "result.rules.motion.data.meanPixelChange",
          "=",
          0
        ],
        [
          "result.rules.motion.data.maxPixelChange",
          "=",
          0
        ],
        [
          "result.rules.motion.data.changeFrequency",
          "=",
          0
        ]
      ],
      "withItems": true,
      "rules": [
        "y",
        "motion"
      ]
    },
    {
      "type": "url",
      "which": "__targets__/motion/bad.html",
      "what": "page with motion"
    },
    {
      "type": "test",
      "which": "testaro",
      "what": "spontaneous change of content",
      "delay": 2400,
      "interval": 2600,
      "count": 5,
      "expect": [
        [
          "result.rules.motion.data.meanLocalRatio",
          ">",
          1
        ],
        [
          "result.rules.motion.data.maxLocalRatio",
          ">",
          1
        ],
        [
          "result.rules.motion.data.globalRatio",
          ">",
          1
        ],
        [
          "result.rules.motion.data.meanPixelChange",
          ">",
          0
        ],
        [
          "result.rules.motion.data.maxPixelChange",
          ">",
          0
        ],
        [
          "result.rules.motion.data.changeFrequency",
          ">",
          0
        ]
      ],
      "withItems": true,
      "rules": [
        "y",
        "motion"
      ]
    }
  ],
